<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:fadingEdge="none">
    
    <LinearLayout
    	android:id="@+id/playlist_linear"
    	android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@null"
        android:paddingLeft="22dip"
        android:paddingTop="8dip">       
        	
        	<RelativeLayout
        	    android:id="@+id/randominfobg"
        		android:layout_width="240dip"
        		android:layout_height="240dip"
        		android:background="@null">
        		
	        	<LinearLayout
	        		android:id="@+id/randominfo"
	        		android:layout_width="match_parent"
	        		android:layout_height="58dip"
	        		android:orientation="vertical"	        		
	        		android:layout_alignParentBottom="true">
	        		
		        	<TextView
		        		android:id="@+id/randomlisttitle"
		        		android:layout_width="match_parent"
		        		android:layout_height="wrap_content" 
		        		android:paddingLeft="6dip"
		        		android:paddingTop="4dip"
		        		android:textAppearance="?android:attr/textAppearanceLarge"
		        		android:gravity="center_vertical"		        		
		        		android:background="#56000000"/>
		        		
		        	<TextView
		        		android:id="@+id/randomlistcount"
		        		android:layout_width="match_parent"
		        		android:layout_height="wrap_content" 
		        		android:paddingLeft="6dip"
		        		android:paddingTop="1dip"
		        		android:paddingBottom="4dip"
		        		android:textAppearance="?android:attr/textAppearanceSmall"
		        		android:textColor="#D4D4D4"
		        		android:background="#56000000"
		        		android:gravity="center_vertical"/>
	        		
	        	</LinearLayout>
	       	</RelativeLayout>
        
        <GridView
        	android:scrollbars="none"
	        android:id="@+id/playlist_grid"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:paddingTop="8dip"
			android:verticalSpacing="8dip"
			android:horizontalSpacing="8dip"		   
	        android:numColumns="2" />
   	</LinearLayout>

</ScrollView>

