    <!-- app title -->
    <style name="BarTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20.0sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginLeft">16dip</item>
    </style>

    <style name="BarDividerStyle">
        <item name="android:layout_width">2dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <!-- refresh style -->
    <style name="BarIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginRight">12dip</item>
    </style>
    
    <!-- basket introduce style -->
    <style name="basketIntroduceStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#515151</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:layout_marginRight">16dip</item>                
    </style>

    <style name="SysMenuTextItem" parent="SysMenuTopTextItem">
        <item name="android:paddingRight">30.0dip</item>
    </style>

    <style name="SysMenuTopTextItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingBottom">8.0dip</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:layout_gravity">center</item>
    </style>
