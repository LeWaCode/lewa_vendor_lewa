<resources>

    <!-- button style -->
    <style name="buttonStyle">
        <!-- <item name="android:textColor">@drawable/btn_textcolor_normal</item> -->
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:layout_marginTop">13dip</item>
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="buttonPressedStyle">
        <!-- <item name="android:textColor">@drawable/btn_textcolor_pressed</item> -->
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:layout_marginTop">13dip</item>
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- listview item -->
    <style name="listview_item_style">
        <item name="android:minHeight">68dip</item>
    </style>
    <!-- textview -->
    <style name="textview_big_title_style">
        <item name="android:layout_width">170dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#515151</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_marginRight">12dip</item>
                
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">4dip</item>
    </style>

    <style name="textview_small_title_style">
        <item name="android:textColor">#808080</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_marginRight">12dip</item>
        <item name="android:layout_marginTop">4dip</item>
        
        <item name="android:layout_width">170dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
     <style name="textview_small_title_style_backup">
        <item name="android:textColor">#808080</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_marginRight">12dip</item>
        <item name="android:layout_marginTop">4dip</item>
        <item name="android:layout_marginBottom">4dip</item>
        <item name="android:layout_width">180dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
    
	<style name="MainTextViewStyle">
        <item name="android:textColor">#ff3b3b3b</item>
    </style>
    
    <style name="MainTextViewStyle.Shadow">
    	<item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
    </style>


