<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/spm_brightness_window_parent">
	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        	android:id="@+id/spm_brigheness_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="20dip">

        <CheckBox android:id="@+id/spm_brightness_automatic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/automatic_brightness"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="6dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip" />

        <SeekBar android:id="@+id/spm_brightness_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:max="225" />

    </LinearLayout>
</ScrollView>
</LinearLayout>
