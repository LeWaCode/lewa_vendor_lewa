<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="-1dip">
        <ImageView android:id="@+id/spm_running_app_icon"
            style="@style/app_icon_style"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="2dip"
            android:scaleType="fitCenter" />
        <LinearLayout android:id="@+id/spm_running_app_rl1"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/spm_running_app_icon"
            android:layout_marginLeft="8dip">
            <TextView android:id="@+id/spm_running_app_name"
                style="@style/textview_big_title_style"
                android:layout_height="wrap_content"/>
            <ProgressBar android:id="@+id/spm_running_app_progress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginLeft="6dip"
                android:layout_marginTop="3dip"
                style="?android:attr/progressBarStyleHorizontal"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/spm_running_app_rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/spm_running_app_rl1"
            android:layout_marginLeft="20dip">
            <TextView android:id="@+id/spm_running_app_power_consume_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dip"
                android:textColor="#808080"/>
            <TextView android:id="@+id/spm_app_is_running"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
	    <View android:layout_width="fill_parent"
	            android:layout_height="1dip"
	            android:layout_marginTop="2dip"/>
</LinearLayout>
