<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spm_mode_dialog_linearlayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#ffffff">
<!-- first line for time show -->
    	<TextView
        	android:id="@+id/spm_mode_dialog_title"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="13dip"
        	android:textColor="#000000"/>
        	
       <LinearLayout android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:orientation="vertical"
       		android:id="@+id/spm_mode_dialog_communication_rl"
     		android:visibility="invisible"
     		>
     		<View 	android:id="@+id/spm_mode_dialog_communication_view"
					android:layout_width="fill_parent"
		            android:layout_height="1dip"
		            android:background="#ffd8d8d8"/>
			<View android:layout_width="fill_parent"
		            android:layout_height="1dip"
		            android:background="#ffffffff"/>
	     	<RelativeLayout android:layout_width="wrap_content"
	     		android:layout_height="wrap_content"
	     		android:layout_marginLeft="13dip"
     			android:layout_marginRight="13dip"
	     		>
			<TextView
		        android:id="@+id/spm_mode_dialog_communication_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/spm_mode_dialog_title"
		        android:text="@string/dev_call_msg" 
		        android:textColor="#FF0000"
		        />
		
		    <TextView
		        android:id="@+id/spm_mode_dialog_communication_value"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/spm_mode_dialog_title"
		        android:layout_alignParentRight="true"
		        android:textColor="#FF0000"
		        />
	     	</RelativeLayout>
	</LinearLayout> 
	<View 	android:id="@+id/spm_mode_dialog_communication_view"
					android:layout_width="fill_parent"
		            android:layout_height="1dip"
		            android:layout_marginTop="2dip"
		            android:background="#ffd8d8d8"/>
	<View android:layout_width="fill_parent"
		            android:layout_height="1dip"
		            android:background="#ffffffff"/>
<!-- 1 parameter line -->  
	<RelativeLayout android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:layout_marginTop="2dip"
     		android:layout_marginLeft="13dip"
     		android:layout_marginRight="13dip"
     		android:id="@+id/spm_mode_dialog_bluetooth_rl"> 
	    <TextView
	        android:id="@+id/spm_mode_dialog_bluetooth_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_communication_view"
	        android:text="@string/dev_bluetooth" 
	        android:textColor="#000000"
	        />
	
	    <TextView
	        android:id="@+id/spm_mode_dialog_bluetooth_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_communication_view"
	        android:layout_alignParentRight="true"
	        android:textColor="#000000"
	        />
    </RelativeLayout> 
    <View 	android:id="@+id/spm_mode_dialog_bluetooth_view"
				android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_bluetooth_rl"
	            android:layout_height="1dip"
	            android:layout_marginTop="2dip"
	            android:background="#ffd8d8d8"/>
	<View android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_bluetooth_rl"
	            android:layout_height="1dip"
	            android:background="#ffffffff"/>
                
<!-- 2 parameter line -->  
	<RelativeLayout android:layout_width="wrap_content"
	     		android:layout_height="wrap_content"
	     		android:layout_marginTop="2dip"
	     		android:layout_marginLeft="13dip"
	     		android:layout_marginRight="13dip"
	     		android:id="@+id/spm_mode_dialog_touch_rl"> 
	    <TextView
	        android:id="@+id/spm_mode_dialog_touch_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_bluetooth_view"
	        android:text="@string/dev_haptic" 
	        android:textColor="#000000"/>
	
	    <TextView
	        android:id="@+id/spm_mode_dialog_touch_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_bluetooth_view"
	        android:layout_alignParentRight="true"
	        android:textColor="#000000"/>
	</RelativeLayout> 
	<View 	android:id="@+id/spm_mode_dialog_touch_view"
				android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_touch_rl"
	            android:layout_height="1dip"
	            android:layout_marginTop="2dip"
	            android:background="#ffd8d8d8"/>
	<View android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_touch_rl"
	            android:layout_height="1dip"
	            android:background="#ffffffff"/> 
<!-- 3 parameter line -->
	<RelativeLayout android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:layout_marginTop="2dip"
     		android:layout_marginLeft="13dip"
     		android:layout_marginRight="13dip"
     		android:id="@+id/spm_mode_dialog_data_rl"> 
	    <TextView
	        android:id="@+id/spm_mode_dialog_data_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_touch_view"
	        android:text="@string/dev_data" 
	        android:textColor="#000000"
	        />
	
	    <TextView
	        android:id="@+id/spm_mode_dialog_data_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_touch_view"
	        android:layout_alignParentRight="true"
	        android:textColor="#000000"
	        />
	</RelativeLayout> 
	<View 	android:id="@+id/spm_mode_dialog_data_view"
				android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_data_rl"
	            android:layout_height="1dip"
	            android:layout_marginTop="2dip"
	            android:background="#ffd8d8d8"/>
	<View android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_data_rl"
	            android:layout_height="1dip"
	            android:background="#ffffffff"/> 
    
<!-- 4 parameter line -->
	<RelativeLayout android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:layout_marginTop="2dip"
     		android:layout_marginLeft="13dip"
     		android:layout_marginRight="13dip"
     		android:id="@+id/spm_mode_dialog_bright_rl"> 
	    <TextView
	        android:id="@+id/spm_mode_dialog_bright_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_data_view"
	        android:text="@string/spm_screen_light_show" 
	        android:textColor="#000000"/>
	
	    <TextView
	        android:id="@+id/spm_mode_dialog_bright_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_data_view"
	        android:layout_alignParentRight="true"
	        android:textColor="#000000"/>
	</RelativeLayout> 
	<View 	android:id="@+id/spm_mode_dialog_bright_view"
				android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_bright_rl"
	            android:layout_height="1dip"
	            android:layout_marginTop="2dip"
	            android:background="#ffd8d8d8"/>
	<View android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_bright_rl"
	            android:layout_height="1dip"
	            android:background="#ffffffff"/> 
<!-- 5 parameter line -->  
	<RelativeLayout android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:layout_marginTop="2dip"
     		android:layout_marginLeft="13dip"
     		android:layout_marginRight="13dip"
     		android:id="@+id/spm_mode_dialog_sync_rl">  
	    <TextView
	        android:id="@+id/spm_mode_dialog_sync_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_bright_text"
	        android:text="@string/spm_screen_sync_show" 
	        android:textColor="#000000"/>
	
	    <TextView
	        android:id="@+id/spm_mode_dialog_sync_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_bright_value"
	        android:layout_alignParentRight="true"
	        android:textColor="#000000"/>
	 </RelativeLayout> 
	<View 	android:id="@+id/spm_mode_dialog_sync_view"
				android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_bright_view"
	            android:layout_height="1dip"
	            android:layout_marginTop="2dip"
	            android:background="#ffd8d8d8"/>
	<View android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_bright_view"
	            android:layout_height="1dip"
	            android:background="#ffffffff"/> 
    
<!-- 5 parameter line --> 
	<RelativeLayout android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:layout_marginTop="2dip"
     		android:layout_marginLeft="13dip"
     		android:layout_marginRight="13dip"
     		android:id="@+id/spm_mode_dialog_timeout_rl">    
	    <TextView
	        android:id="@+id/spm_mode_dialog_timeout_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_sync_view"
	        android:text="@string/spm_screen_timeout_show" 
	        android:textColor="#000000"/>
	
	    <TextView
	        android:id="@+id/spm_mode_dialog_timeout_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_sync_view"
	        android:layout_alignParentRight="true"
	        android:textColor="#000000"/>
	</RelativeLayout> 
	<View 	android:id="@+id/spm_mode_dialog_timeout_view"
				android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_timeout_view"
	            android:layout_height="1dip"
	            android:layout_marginTop="2dip"
	            android:background="#ffd8d8d8"/>
	<View android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_timeout_view"
	            android:layout_height="1dip"
	            android:background="#ffffffff"/> 
    
<!-- 6 parameter line -->  
	<RelativeLayout android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:layout_marginTop="2dip"
     		android:layout_marginLeft="13dip"
     		android:layout_marginRight="13dip"
     		android:id="@+id/spm_mode_dialog_gps_rl">      
	    <TextView
	        android:id="@+id/spm_mode_dialog_gps_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_timeout_view"
	        android:text="@string/dev_gps" 
	        android:textColor="#000000"/>
	
	    <TextView
	        android:id="@+id/spm_mode_dialog_gps_text_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_timeout_view"
	        android:layout_alignParentRight="true"
	        android:textColor="#000000"/>
	 </RelativeLayout> 
	<View 	android:id="@+id/spm_mode_dialog_gps_view"
				android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_gps_view"
	            android:layout_height="1dip"
	            android:layout_marginTop="2dip"
	            android:background="#ffd8d8d8"/>
	<View android:layout_width="fill_parent"
				android:layout_below="@id/spm_mode_dialog_gps_view"
	            android:layout_height="1dip"
	            android:background="#ffffffff"/>
        
<!-- 7 parameter line -->  
	<RelativeLayout android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:layout_marginTop="2dip"
     		android:layout_marginLeft="13dip"
     		android:layout_marginRight="13dip"
     		android:id="@+id/spm_mode_dialog_wlan_rl">    
	    <TextView
	        android:id="@+id/spm_mode_dialog_wlan_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_gps_view"
	        android:text="@string/dev_wifi"
	        android:textColor="#000000"
	        />
	
	    <TextView
	        android:id="@+id/spm_mode_dialog_wlan_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/spm_mode_dialog_gps_view"
	        android:layout_alignParentRight="true"
	        android:textColor="#000000"
	        />
	</RelativeLayout> 

</LinearLayout>