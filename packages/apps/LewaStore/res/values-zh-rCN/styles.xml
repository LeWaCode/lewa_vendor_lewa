        <item name="android:maxLines">2</item>
    </style>

    <style name="app_icon_style">
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginLeft">16dip</item>
        <!-- <item name="android:background">@drawable/logo_bg</item> -->
    </style>

    <style name="basket_app_icon_style">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">48dip</item>
