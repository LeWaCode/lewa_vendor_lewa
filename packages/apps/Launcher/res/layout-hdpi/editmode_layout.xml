<?xml version="1.0" encoding="utf-8"?>
<com.lewa.launcher.DragLayer xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	<com.lewa.launcher.EditModeZone
		android:id="@+id/editmode" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" 
		android:layout_gravity="bottom"
		android:visibility="gone"
		>
		<com.lewa.launcher.AllInfoZone 
			android:id="@+id/appsinfo_view" 
    		android:layout_width="fill_parent"
    		android:layout_height="98dip"
    		android:visibility="gone" 		
   			>
   			<ImageView
    			android:layout_width="fill_parent"
   	 			android:layout_height="fill_parent"
    			android:background="@drawable/appinfo_list_bg" 	 		
    		/>
			<com.lewa.launcher.AppInfoList
				android:id="@+id/appinfo_list" 
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:spacing="-2dip"	
		        android:layout_marginLeft="-236dip"
				/>
		</com.lewa.launcher.AllInfoZone>
	  	
		<TableLayout android:id="@+id/appinfo_category"
			android:layout_width="fill_parent" 
			android:layout_height="68dip"
			android:background="@drawable/appinfo_category_bg" 
			android:stretchColumns="*"
			android:layout_gravity="center"
			android:gravity="center"
			>
			<TableRow 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center"
				>
			<LinearLayout
				android:id="@+id/wallpaper_btn"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_gravity="center"
				>	
				<ImageView	
				   	android:id="@+id/wallpaper_category"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/lewa_editwallpaper"
					android:layout_gravity="center"
					android:focusable="true"
					/>
				<TextView
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:text="@string/group_wallpapers"
					android:layout_gravity="center"
					android:textSize="13dip"
					/>	
			</LinearLayout>
			<LinearLayout
 				android:id="@+id/widget_btn"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_gravity="center"
				>	
				<ImageView	
				   	android:id="@+id/widget_category"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/lewa_editwidget"
					android:layout_gravity="center"
					android:focusable="true"
					/>
				<TextView
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:text="@string/group_widgets"
					android:layout_gravity="center"
					android:textSize="13dip"
					/>	
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/shortcut_btn"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_gravity="center"
				>	
				<ImageView	
				   	android:id="@+id/shortcut_category"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/lewa_editshortcut"
					android:layout_gravity="center"
					android:focusable="true"
					/>
				<TextView
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:text="@string/group_shortcuts"
					android:layout_gravity="center"
					android:textSize="13dip"
					/>	
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/folder_btn"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_gravity="center"
				>	
				<ImageView	
				   	android:id="@+id/folder_category"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/lewa_editfolder"
					android:layout_gravity="center"
					android:focusable="true"
					/>
				<TextView
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:text="@string/group_live_folders"
					android:layout_gravity="center"
					android:textSize="13dip"
					/>	
			</LinearLayout>
			</TableRow>
		</TableLayout>
	</com.lewa.launcher.EditModeZone>
	</com.lewa.launcher.DragLayer>