<?xml version="1.0" encoding="utf-8"?>

<com.lewa.PIM.mms.ui.RecentContacts
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/recipient_contacts"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/recent_contact_list_bg">
	 
	<LinearLayout android:id="@+id/recipient_first"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal" 
		android:layout_marginTop="2dip"
		android:layout_marginBottom="1.5dip"		
		android:gravity="center_vertical">

		<LinearLayout 
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:gravity="center_horizontal">
			
			<TextView android:id="@+id/recipient_first_1"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:singleLine="true"
				android:maxWidth="80dip"
				android:ellipsize="end"
				android:textColor="#ff515151"	
				android:src="@drawable/recent_contact_item_bg_n"
				android:background="@drawable/recent_contacts_selector"	
				android:gravity="center"/>
				
		</LinearLayout>
				
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:src="@drawable/recent_contact_divider_v"/>	
			
		<LinearLayout
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:gravity="center_horizontal">

			<TextView android:id="@+id/recipient_first_2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:singleLine="true"
				android:maxWidth="80dip"
				android:ellipsize="end"
				android:textColor="#ff515151"	
				android:src="@drawable/recent_contact_item_bg_n"
				android:background="@drawable/recent_contacts_selector"	
				android:gravity="center"/>
				
		</LinearLayout>		
		
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:src="@drawable/recent_contact_divider_v"/>	
			
		<LinearLayout
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:gravity="center_horizontal">

			<TextView android:id="@+id/recipient_first_3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:singleLine="true"
				android:maxWidth="80dip"
				android:ellipsize="end"
				android:textColor="#ff515151"	
				android:src="@drawable/recent_contact_item_bg_n"
				android:background="@drawable/recent_contacts_selector"	
				android:gravity="center"/>
								
		</LinearLayout>	
		    				
	</LinearLayout>
	
	<LinearLayout android:id="@+id/recipient_second"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal" 
		android:layout_marginTop="1.5dip"
		android:layout_marginBottom="2dip"		
		android:gravity="center_vertical">
		
		<LinearLayout
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:gravity="center_horizontal">

			<TextView android:id="@+id/recipient_second_1"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:singleLine="true"
				android:maxWidth="80dip"
				android:ellipsize="end"
				android:textColor="#ff515151"	
				android:src="@drawable/recent_contact_item_bg_n"
				android:background="@drawable/recent_contacts_selector"	
				android:gravity="center"/>
								
		</LinearLayout>		
		
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:src="@drawable/recent_contact_divider_v"/>	
			
		<LinearLayout
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:gravity="center_horizontal">

			<TextView android:id="@+id/recipient_second_2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:singleLine="true"
				android:maxWidth="80dip"
				android:ellipsize="end"
				android:textColor="#ff515151"	
				android:src="@drawable/recent_contact_item_bg_n"
				android:background="@drawable/recent_contacts_selector"	
				android:gravity="center"/>
				
		</LinearLayout>		
		
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:src="@drawable/recent_contact_divider_v"/>	
			
		<LinearLayout
            android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:gravity="center_horizontal">

			<TextView android:id="@+id/recipient_second_3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:singleLine="true"
				android:maxWidth="80dip"
				android:ellipsize="end"
				android:textColor="#ff515151"	
				android:src="@drawable/recent_contact_item_bg_n"
				android:background="@drawable/recent_contacts_selector"	
				android:gravity="center"/>
				
		</LinearLayout>		 					
	</LinearLayout>			
</com.lewa.PIM.mms.ui.RecentContacts>