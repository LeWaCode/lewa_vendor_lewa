<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:orientation="vertical">
        
<com.lewa.PIM.contacts.ui.ContactHorDriver 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">      
    <RelativeLayout
            android:id="@+id/v_log_detail_item_main_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/list_item_padding_left"
            android:layout_marginRight="@dimen/list_item_padding_right"
            android:paddingTop="2dip"
            android:paddingBottom="2dip">
        <ImageView
            android:id="@+id/img_log_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_log_detail_type"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8.0dip"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/txt_log_detail_displaynumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/main_text_color"
                    android:singleLine="true"
                    android:ellipsize="marquee" />
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/txt_log_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ff808080" />
                <TextView
                        android:id="@+id/txt_log_detail_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ff808080" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</com.lewa.PIM.contacts.ui.ContactHorDriver>      
</LinearLayout>
