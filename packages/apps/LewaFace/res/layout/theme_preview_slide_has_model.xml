<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <android.support.lewa.view.LewaPagerView  
        android:id="@+id/pager"  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent" />  

        
    <RelativeLayout android:id="@+id/theme_top_bar" 
        android:clickable="true"
        android:background="#BF000000" 
        android:layout_width="fill_parent" 
        android:layout_height="76dip" 
        android:layout_alignParentTop="true">
        
        <LinearLayout
			android:orientation="vertical" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="22.0dip" 
			android:layout_alignParentLeft="true">
            
		    <LinearLayout 
		        android:orientation="horizontal" 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"> 
		        
		        <TextView android:id="@+id/theme_name"
		            android:textSize="22.0sp" 
		            android:textColor="#FFFFFF" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:singleLine="true" />
		    </LinearLayout>
            
		   	<LinearLayout android:id="@+id/theme_info"
		         android:orientation="horizontal"  
		         android:layout_width="wrap_content" 
		         android:layout_height="wrap_content">  
		         
		           
		         <TextView android:id="@+id/theme_author"
		             android:textSize="15.0sp" 
		             android:textColor="#FFFFFF"  
		             android:layout_width="wrap_content" 
		             android:layout_height="wrap_content" 
		             android:shadowColor="@android:color/black" 
		             android:shadowDy="2.0" 
		             android:shadowRadius="2.0" />
		                     
		         <TextView android:id="@+id/theme_size"
		             android:textSize="15.0sp"
		             android:textColor="#FFFFFF" 
		             android:layout_width="wrap_content" 
		             android:layout_height="wrap_content"
		             android:layout_marginLeft="10.0dip" 
		             android:shadowColor="@android:color/black" 
		             android:shadowDy="2.0" 
		             android:shadowRadius="2.0" />
		               
		   </LinearLayout>
		                
		   <LinearLayout android:id="@+id/mode_number"
		    android:orientation="horizontal" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_alignParentLeft="true">
		       <TextView android:id="@+id/theme_mode_number"
		        android:textSize="15.0sp" 
		        android:textColor="#FFFFFF"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
		        android:singleLine="true" />
		  </LinearLayout>
                
		</LinearLayout>
        
        <LinearLayout 
            android:orientation="horizontal" 
            android:layout_width="48dip" 
            android:layout_height="48dip" 
            android:layout_marginRight="16.0dip" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true">
            <ImageView android:id="@+id/theme_check_info" 
                android:layout_gravity="center" 
                android:background="@drawable/theme_check_info" 
                android:layout_width="48dip" 
                android:layout_height="48dip"/> 
                
        </LinearLayout>
        
    </RelativeLayout>
    
    
    <LinearLayout android:id="@+id/theme_indicator"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/theme_bottom_bar"
        android:layout_marginBottom="35dip"
        android:gravity="center"/> 
    
    <LinearLayout android:id="@+id/theme_bottom_bar"
       android:orientation="horizontal"  
       android:layout_width="fill_parent" 
       android:layout_height="50dip"
       android:background="#BF000000"
       android:layout_alignParentBottom="true">  
        
	    <LinearLayout android:id="@+id/theme_bottom_bar_local"
	       android:orientation="horizontal"  
	       android:layout_width="fill_parent" 
	       android:layout_height="50dip">
	       
	       <TextView android:id="@+id/theme_apply"
		       android:textSize="15.0sp" 
		       android:textColor="#FFFFFF"
		       android:background="@drawable/theme_textview_highlight" 
		       android:clickable="true" 
		       android:layout_width="wrap_content" 
		       android:layout_height="fill_parent"
		       android:layout_weight="1"
		       android:gravity="center" 
		       android:text="@string/theme_apply" 
		       android:shadowColor="@android:color/black" 
		       android:shadowDy="2.0" 
		       android:shadowRadius="2.0" />
	      <ImageView 
	           android:layout_width="wrap_content" 
	           android:layout_height="wrap_content" 
	           android:src="@drawable/theme_divider" />
	      <TextView android:id="@+id/theme_share"
	           android:textSize="15.0sp" 
	           android:textColor="#FFFFFF"
	           android:background="@drawable/theme_textview_highlight"
	           android:clickable="true"  
	           android:layout_width="wrap_content" 
	           android:layout_height="fill_parent"
	           android:layout_weight="1"
	           android:gravity="center" 
	           android:text="@string/theme_share" 
	           android:shadowColor="@android:color/black" 
	           android:shadowDy="2.0" 
	           android:shadowRadius="2.0" />
	      <ImageView 
	           android:layout_width="wrap_content" 
	           android:layout_height="wrap_content" 
	           android:src="@drawable/theme_divider" />
	      <TextView android:id="@+id/theme_delete"
	           android:textSize="15.0sp" 
	           android:textColor="#FFFFFF"
	           android:background="@drawable/theme_textview_highlight"
	           android:clickable="true"  
	           android:layout_width="wrap_content" 
	           android:layout_height="fill_parent"
	           android:layout_weight="1"
	           android:gravity="center" 
	           android:text="@string/theme_delete" 
	           android:shadowColor="@android:color/black" 
	           android:shadowDy="2.0" 
	           android:shadowRadius="2.0" />
	     </LinearLayout>
	     
	     <LinearLayout android:id="@+id/theme_bottom_bar_online"
	       android:orientation="horizontal"  
	       android:layout_width="fill_parent" 
	       android:layout_height="50dip">
	       
	       
	       <TextView android:id="@+id/theme_download"
	           android:textSize="15.0sp" 
	           android:textColor="#FFFFFF"
	           android:background="@drawable/theme_textview_highlight" 
	           android:clickable="true" 
	           android:layout_width="fill_parent" 
	           android:layout_height="fill_parent"
	           android:gravity="center" 
	           android:text="@string/theme_download" 
	           android:shadowColor="@android:color/black" 
	           android:shadowDy="2.0" 
	           android:shadowRadius="2.0" />
	      
	     </LinearLayout>
	      
	    </LinearLayout> 
</RelativeLayout>
